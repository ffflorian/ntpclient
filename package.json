{
  "author": "Florian Keller <github@floriankeller.de>",
  "bin": {
    "ntpclient": "dist/cli.js"
  },
  "dependencies": {
    "commander": "5.0.0"
  },
  "description": "A TypeScript implementation of the NTP Client Protocol",
  "devDependencies": {
    "@ffflorian/prettier-config": "0.0.6",
    "@ffflorian/semantic-release-config": "0.2.0",
    "@ffflorian/tslint-config": "0.7.1",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@types/jasmine": "3.5.10",
    "@types/node": "~12",
    "husky": "4.2.3",
    "jasmine": "3.5.0",
    "lint-staged": "10.0.10",
    "prettier": "1.19.1",
    "publish-flat": "1.4.0",
    "rimraf": "3.0.2",
    "semantic-release": "17.0.4",
    "ts-node": "8.8.1",
    "tslint": "6.1.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.3.0",
    "typescript": "3.8.3"
  },
  "engines": {
    "node": ">= 10.9"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "GPL-3.0",
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "spec/**/*.ts": [
      "tslint --project tsconfig.jasmine.json --fix"
    ],
    "src/**/*.ts": [
      "tslint --project tsconfig.json --fix"
    ]
  },
  "main": "dist/index.js",
  "name": "ntpclient",
  "prettier": "@ffflorian/prettier-config",
  "release": {
    "extends": "@ffflorian/semantic-release-config"
  },
  "repository": "https://github.com/ffflorian/ntpclient.git",
  "scripts": {
    "build": "tsc",
    "clear": "rimraf dist",
    "dist": "yarn clear && yarn build",
    "flatten": "publish-flat -o flattened",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix && yarn lint:ts:spec --fix",
    "lint": "yarn lint:ts && yarn lint:ts:spec && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "tslint --project tsconfig.json",
    "lint:ts:spec": "tslint --project tsconfig.jasmine.json",
    "postversion": "node ../node_modules/publish-flat/cli-copy.js -i package.json -o ../package.json version",
    "prettier": "prettier --ignore-path .gitignore \"*.{json,md}\"",
    "release": "semantic-release",
    "start": "ts-node src/cli.ts",
    "test": "ts-node -P tsconfig.jasmine.json node_modules/.bin/jasmine"
  },
  "version": "1.0.2"
}
