{
  "author": "Florian Keller <github@floriankeller.de>",
  "bin": {
    "ntpclient": "dist/cli.js"
  },
  "dependencies": {
    "commander": "2.20.0"
  },
  "description": "A TypeScript implementation of the NTP Client Protocol",
  "devDependencies": {
    "@semantic-release/changelog": "3.0.2",
    "@semantic-release/git": "7.0.8",
    "@types/jasmine": "3.3.12",
    "@types/node": "11.13.4",
    "husky": "1.3.1",
    "jasmine": "3.4.0",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "semantic-release": "15.13.3",
    "ts-node": "8.1.0",
    "tslint": "5.15.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.4.3",
    "webpack": "4.29.6"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "src/**/*.ts": [
      "tslint --project tsconfig.json --fix",
      "git add"
    ],
    "spec/**/*.ts": [
      "tslint --project tsconfig.jasmine.json --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "license": "MIT",
  "main": "dist/index.js",
  "name": "ntpclient",
  "repository": "https://github.com/ffflorian/ntpclient.git",
  "scripts": {
    "build": "tsc",
    "clear": "rimraf dist",
    "dist": "yarn clear && yarn build",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix && yarn lint:ts:spec --fix",
    "lint": "yarn lint:ts && yarn lint:ts:spec && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "tslint --project tsconfig.json",
    "lint:ts:spec": "tslint --project tsconfig.jasmine.json",
    "prettier": "prettier --ignore-path .gitignore \"*.{json,md}\"",
    "test": "ts-node -P tsconfig.jasmine.json node_modules/.bin/jasmine"
  },
  "version": "0.7.3"
}
